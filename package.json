{
  "name": "electron-markdown",
  "version": "0.0.1",
  "main": "main.js",
  "description": "一个electron开发的markdown编辑器",
  "author": {
    "name": "old yang",
    "email": "515411030@qq.com"
  },
  "scripts": {
    "dev:assets": "webpack-dev-server --config ./build/webpack.dev.js",
    "dev": "electron . --dev",
    "build": "webpack --config ./build/webpack.pro.js",
    "dist": "node ./build/electron-build.js"
  },
  "build": {
    "appId": "com.young.app",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown 文件",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown 文件",
        "role": "Editor"
      },
      {
        "ext": "txt",
        "name": "文本文件",
        "role": "Editor"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "license": "MIT",
  "dependencies": {
    "mz": "^2.7.0",
    "object-assign": "^4.1.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "simplemde": "^1.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "electron": "^8.2.4",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
